@foreach (var p in Model.ParentCategories)
{
<li>
    <a class="tab"
       asp-action="List"
       asp-controller="Admin"
       asp-route-category="@p.Name"
       asp-route-page="1">
        <span style="">
            @p.Name
        </span>
    </a>
    @foreach (var c in p.ChildCategories)
    {
        <a class="tab2" asp-action="List" asp-controller="Admin" asp-route-category="@c.Name">@c.Name</a>
        foreach (var cChild in c.ChildCategories)
        {
            <a class="tab3" asp-action="List" asp-controller="Admin" asp-route-category="@cChild.Name">@cChild.Name</a>
        }
    }
</li>

}
